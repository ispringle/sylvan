---
import Base from "@layouts/Base.astro";

import All from "@layouts/All.astro";
import Article from "@components/Article/index.astro";
import Index from "@layouts/Index.astro";
import News from "@layouts/News.astro";
import Root from "@layouts/Root.astro";

const { page, ...props } = Astro.props;
const kind = page.frontmatter?.type || page.frontmatter?.kind || "";
---
<Base pageTitle={page.frontmatter?.title || ""}>
  { () => {
    switch (page.frontmatter?.type || page.frontmatter?.kind || "post") {
      case "root":
        return <Root page={page}><slot /></Root >
      case "all":
        return <All page={page}><slot /></All>
      case "news":
        return <News page={page}><slot /></News >
      case "index":
        return <Index page={page}><slot /></Index>
      case "post":
      case "article":
        return <Article frontmatter={page.frontmatter}>
          <slot />
        </Article>
      default:
        return <Article frontmatter={page.frontmatter}>
          <slot />
        </Article>
    }
  }}
</Base>
