---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import '../styles/colors.sass';

const { pageTitle, ...props } = Astro.props;
---

<style lang="sass" is:global>
  a
    text-decoration: none
    color: var(--default-light-fuscia)
    &:visited
      color: var(--default-dark-fuscia)
    &:hover
      color: var(--default-light-purple)
    &:active
      color: var(--default-dark-purple)
    &::before
      color: var(--fg)
      content: "["
    &::after
      color: var(--fg)
      content: "]"
  body
    background-color: var(--body-bg)
    color: var(--fg)
  main
    background-color: var(--bg)
    height: fit-content
    display: flex
    flex-direction: column
    max-width: var(--main-width)
    margin-left: var(--main-offset)
    padding: 5px
    padding-bottom: 50px
  img
    background-color: var(--bg)
    max-width: var(--main-width)
    margin-left: 50px
    padding: 5px
    border: var(--default-black) 5px double
    box-shadow: 5px 5px var(--fg)
  p
    margin: 5px
  .bordered
    border: var(--default-black) 5px double
    box-shadow: 5px 5px var(--fg)
    padding: 5px
</style>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <main class="bordered">
      <slot />
    </main>
    <Footer />
  </body>
</html>
