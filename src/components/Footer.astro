---
import Music from '@components/Music.astro'
import FooterTopBar from '@components/FooterTopBar.astro'
import FooterBottomBar from '@components/FooterBottomBar.astro'
---
<style>
footer {
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: visible;
  padding-top: 20rem;
}
.topline {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
 }
hr {
  max-width: 66.9rem;
  width: 100%;
  margin: auto;
 }
.list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 1rem;
}
[astro-icon] {
  display: inline;
  line-height: 1;
  height: 1.5em;
  width: 1.5em;
  fill: var(--fg)
}
a {
  text-decoration: none;
 }
</style>
<footer id="rootFooter" data-turbo-permanent>
  <Music />
  <hr>
  <FooterTopBar/>
  <FooterBottomBar/>
</footer>
