---
import { formatDate } from "@utils"
const { author, created, updated, ...props } = Astro.props;
---
<style lang="sass">
article
  position: relative
aside
  background-color: var(--bg)
  /* display: inline */
  display: none
  position: relative
  float: right
  clear: right
  width: 50%
  margin-right: -60%
  & p
    margin: unset
    padding: unset
.content-stack
  display: flex
  flex-wrap: wrap
  gap: 1rem
.content-stack > :first-child
  flex-grow: 1
.content-stack > :last-child
  flex-basis: 0
  flex-grow: 999
  min-inline-size: 50%
</style>
<article>
  {
    author || created || updated
    ? <aside class="bordered">
      {
        author
          ? <p id="author">Written by {author}</p>
          : ""
      }
      {
        created
          ? <p id="created">Created on {formatDate(created)}</p>
          : ""
      }
      {
        updated
          ? <p id="updated">Last updated on {formatDate(updated)}</p>
          : ""
      }
      </aside>
    : ""
  }
    <slot />
</article>
