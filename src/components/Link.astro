---
import { resolveId } from '@lib/pages';
const { class: className, href, ...props } = Astro.props;
let broken = false;
let link = href;
const url = new URL(link, 'file://');
if (url.protocol === 'id:') {
  try {
    link = await resolveId(link);
    // console.log(link)
  } catch {
    broken = true;
  }
}
const external =
  url.protocol === 'http:' ||
  url.protocol === 'https:' ||
  url.protocol === 'mailto:';
---

<a
  rel={external ? 'noopener' : 'prefetch'}
  target={external ? '_blank' : undefined}
  preload={!external}
  role={broken ? 'link' : undefined}
  aria-disabled={broken}
  {...props}
  href={broken ? undefined : link}
>
  <slot />
</a
>
