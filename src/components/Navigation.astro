---
import { getURL} from "@utils";

const href = Astro.url.origin;
---
<style>
.flower2 {
  font-family: 'flower2' !important;
  font-variant: unset !important;
  vertical-align: sub;
  font-size: 3rem;
 }
nav {
  font-size: 3rem;
  margin-top: -6rem;
  font-size: 2rem;
}
a {
  font-size: 3rem;
  height: min-content;
  padding: 0 1rem;
}
@media (max-width: 760px) {
  nav {
    margin-top: -1rem;
    font-size: 2rem;
  }
  a {
    padding: 0 0.5rem;
  }
}
@media (max-width: 450px) {
  nav {
    margin-top: -1rem;
    font-size: 2.25rem;
  }
  a {
    font-size: 2.25rem;
    padding: 0 0.4rem;
  }
  .flower2 {
    display:none;
  }
}
</style>
<nav>
    <span class='flower2'>K</span>
    <a class="nobracket" href={href}>Home</a>
    <span class='flower2'>L</span>
    <a class="nobracket" href={getURL(href, "about")}>About</a>
    <span class='flower2'>M</span>
    <a class="nobracket" href={getURL(href, "blog")}>Blog</a>
    <span class='flower2'>L</span>
    <a class="nobracket" href={getURL(href, "grok")}>Grok</a>
    <span class='flower2'>J</span>
</nav>
