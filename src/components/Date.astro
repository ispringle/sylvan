---
import { DateTime } from "luxon";
import { default as converter } from "number-to-words"

const {date: dateValue} = Astro.props
const date = DateTime.fromISO(dateValue)
const dateStr = date.toFormat("<yyyy-MM-dd EEE>")
---
<style lang="sass">
@use "../styles/globals"
div
  font-size: 0.75rem
  color: var(--fg)
</style>
<div class="date">
  <em>{dateStr}</em>
</div>
