---
import IndexCard from "@components/IndexCard.astro"
const {heading, roll} = Astro.props;
---
<style>
*, *:hover,
rolladex-entry,
rolladex-entry > *, rolladex-entry > *:hover {
  cursor: var(--cursor-default-left),
  var(--cursor-default-right),
  var(--cursor-alt-left-up),
  var(--cursor-alt-right-up),
  var(--cursor-alt-left-down),
  var(--cursor-alt-right-down),
  auto !important;
}
 ul {
   padding-inline: unset;
   display: flex;
   flex-direction: column;
   gap: 1rem;
 }
 li {
   list-style: none;
   display: block;
 }
 li:hover::before {
   aspect-ratio: 1/1;
   content: url(/images/point-right-sm.png);
   position: absolute;
   margin-left: -100px;
 }
</style>
<section>
    <h2>{heading}</h2>
    <ul class="cards">{
        roll.map((card) => (
      <li><IndexCard class="rolladex-entry" card={card}/></li>
        ))
    }</ul>
    <slot/>
</section>
