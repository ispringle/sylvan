---
import { Image } from 'astro:assets';
const { alt, src, width, height, float, margin, ...props} = Astro.props;
---
<style>
img {
  object-fit: contain;
}
</style>
<Image
  alt={alt ?? ""}
  src={src}
  {props}
  style={`
      float:${float};
      height:${height??'unset'};
      width:${width??'75%'};
      margin:${margin??'0 0 0 1rem'};
      ${!float ? "display:block;margin:0 auto;":""}`}
/>
