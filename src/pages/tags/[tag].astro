---
import Base from "@layouts/Base.astro";
import Rolladex from "@components/Rolladex.astro"

import { tags } from "@lib/pages";

export async function getStaticPaths() {
    const allTags = tags;
    return Object.keys(allTags).map(tag => {
        return {
            params: { tag },
            props: { tag, pages: allTags[tag].pages },
        }
    })
}
const { pages, tag } = Astro.props;
const title = `All pages tagged with “${tag}”`
---
<style>
</style>
<Base pageTitle={`'${tag}' Tags`}>
  <article>
    <Rolladex heading={title} roll={pages} />
  </article>
</Base>
